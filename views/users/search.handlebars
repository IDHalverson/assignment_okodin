<header class="page-header">
  <h1>Vikings</h1>
</header>



{{#if users.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Like?</th>
      </tr>
    </thead>
    <tbody>
      {{#each users as |user| }}
      <tr>
        <td>
          <a href="/profiles/show/{{ user.profile_id }}">{{ user.username }}</a>
        </td>
        <td>
          <a href="/profiles/show/{{ user.profile_id }}">{{ user.email }}</a>
        </td>
        <td>
          <a href="/users/like/{{ user.id }}">Like</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No users</p>
{{/if }}
